<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/sound_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_of_sound_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sound_progress"
            android:contentDescription="sound img"
            android:layout_above="@+id/text_of_sound_holder"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/text_of_sound_holder"
            android:background="@color/colorBackgroundOfItem"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sound_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="4dp"
                android:text="Name" />
        </LinearLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>